<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customerhomepage.consumerpg6"
    android:background="@drawable/bg_login"
    >

    <Spinner
        android:id="@+id/am_pm"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="244dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/from_min"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="244dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ic_clock"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_watch"
        tools:layout_editor_absoluteY="43dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="299dp"
        android:layout_height="74dp"
        android:layout_marginEnd="16dp"

        android:text="Please specify your available time range"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="43dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="From:"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="188dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:textColor="@color/white"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="345dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/from_hour"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="244dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/amORpm"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="397dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/to_min"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="397dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/to_hour"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="397dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/icon"
        android:layout_width="7dp"
        android:layout_height="46dp"
        android:text=":"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="240dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/icn"
        android:layout_width="7dp"
        android:layout_height="46dp"
        android:text=":"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="393dp"
        tools:ignore="MissingConstraints" />

    <!--Can make the color nicer here-->
    <Button
        android:id="@+id/findLocation"
        android:layout_width="384dp"
        android:layout_height="172dp"
        android:background=""
        android:text="FInd my Location"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="508dp" />


</androidx.constraintlayout.widget.ConstraintLayout>