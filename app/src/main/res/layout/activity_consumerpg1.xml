<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consumerPG1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    tools:context=".customerhomepage.consumerpg1">
 
    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="327dp"
        android:layout_height="58dp"
        android:layout_marginTop="68dp"
        android:elevation="20dp"
        android:fontFamily="@font/paytone_one"
        android:padding="10dp"
        android:shadowColor="@color/middayblue"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="Welcome To FIXXED!"
        android:textColor="@color/neongold"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/consumerSignupOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:text="How would you like to sign in today?"
        android:textColor="@color/normalfont"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243" />

    <Button
        android:id="@+id/btn_consumer_customer"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/bg_option"
        android:drawableStart="@drawable/ic_consumer_customer"
        android:elevation="50dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="18dp"
        android:text="   Customer"
        android:textAllCap="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/link_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Continue as Guest"
        android:textColor="@color/maintitle"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/btn_consumer_customer"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/btn_consumer_customer"
        app:layout_constraintTop_toBottomOf="@+id/btn_consumer_customer" />

</androidx.constraintlayout.widget.ConstraintLayout>